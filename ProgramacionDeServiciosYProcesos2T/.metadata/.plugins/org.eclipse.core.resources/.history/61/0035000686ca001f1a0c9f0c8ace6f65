package com.ejemplo.cliente;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.net.Socket;

public class Cliente {

	public static void main(String[] args) {

		// confiracion cliente
		String servidorIP = "127.0.0.1";
		int puerto = 10101;

		
		try (Socket socket = new Socket(servidorIP, puerto)){
			
			System.out.println("Conectado al servidor: " + servidorIP + ": " + puerto);
			
			//streams de entrada y salida
			BufferedReader br  = new BufferedReader(new InputStreamReader(sock));
			
			
			
			
		} catch (IOException e) {
			System.err.println("Error en el cliente: " + e.getMessage());
			e.printStackTrace();
		}
		
		
		
	}

}
