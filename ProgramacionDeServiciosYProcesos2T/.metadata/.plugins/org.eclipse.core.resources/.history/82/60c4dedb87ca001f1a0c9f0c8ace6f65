package com.ejemplo.cliente;

import java.io.*;
import java.net.*;
import java.util.Scanner;

public class Cliente {
	public static void main(String[] args) {
		
		
		// Configuración del cliente
		String servidorIP = "127.0.0.1"; // IP del servidor
		int puerto = 10101; // Puerto de conexión

		try (Socket socket = new Socket(servidorIP, puerto)) {
			System.out.println("Cliente conectado desde: " + servidorIP + ":" + puerto);

			// Streams de entrada y salida
			PrintWriter salida = new PrintWriter(socket.getOutputStream(), true);
			BufferedReader entrada = new BufferedReader(new InputStreamReader(socket.getInputStream()));

			// Leer un número del usuario
			Scanner scanner = new Scanner(System.in);
			System.out.print("Introduce un número: ");
			int numero = scanner.nextInt();

			// Enviar el número al servidor
			salida.println(numero);

			// Leer la respuesta del servidor
			String respuesta = entrada.readLine();
			System.out.println("El cuadrado de " + numero + " es: " + respuesta);

		} catch (IOException e) {
			System.err.println("Error en el cliente: " + e.getMessage());
		}
	}
}
