<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controlador.ControladorGasolinera" spacing="10" alignment="CENTER">
    <!-- Campo para introducir la cantidad de euros -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Cantidad en Euros:" />
        <TextField fx:id="campoCantidadEuros" promptText="Introduce la cantidad en euros" />
    </HBox>

    <!-- Campo de texto para mostrar los litros cargados de gasolina -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Gasolina cargada (Litros):" />
        <TextField fx:id="campoGasolina" editable="false" />
    </HBox>

    <!-- Barra de progreso para mostrar la carga de gasolina -->
    <ProgressBar fx:id="barraProgreso" prefWidth="250" />

    <!-- Botones Iniciar y Cancelar -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="botonIniciar" text="Iniciar" />
        <Button fx:id="botonCancelar" text="Cancelar" />
    </HBox>
</VBox>
