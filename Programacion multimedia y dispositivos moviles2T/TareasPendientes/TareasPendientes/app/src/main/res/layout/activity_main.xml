<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- CABECERO -->
    <include layout="@layout/header"/>

    <!-- Contenedor Principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnVerTareas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ver_tareas"
            android:backgroundTint="@color/primary"
            android:textColor="@color/button_text"
            android:padding="12dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnCrearTarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crear_tarea"
            android:backgroundTint="@color/secondary"
            android:textColor="@color/button_text"
            android:padding="12dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnConfiguracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/configuracion"
            android:backgroundTint="@color/primary_variant"
            android:textColor="@color/button_text"
            android:padding="12dp"
            android:layout_marginBottom="10dp"/>

        <!-- ðŸ”´ NUEVO BOTÃ“N PARA CERRAR LA APP -->
        <Button
            android:id="@+id/btnCerrarApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cerrar_app"
            android:backgroundTint="@color/error"
            android:textColor="@color/button_text"
            android:padding="12dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <!-- FOOTER -->
    <include layout="@layout/footer"/>
</LinearLayout>
